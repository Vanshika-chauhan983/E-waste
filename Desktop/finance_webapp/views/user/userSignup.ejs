<% layout("../views/layouts/boilerplate.ejs")%>
<body>
    <h1>Sign-Up Page</h1>
    <form id="signup-form" method="POST" action="/registeruser">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="dob">D.O.B:</label>
        <input type="date" id="dob" name="dob" required><br><br>

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required><br><br>

        <label for="pan">Pan card:</label>
        <input type="text" id="pan" name="pan" required><br><br>

        <label for="gst">GST:</label>
        <input type="text" id="gst" name="gst" required><br><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>

        <label for="mobile">Mobile number:</label>
        <input type="tel" id="mobile" name="mobile" required><br><br>

        <button type="button" onclick="verifyPan()">Verify Pan</button><br><br> 
        <button type="button" onclick="verifyGst()">Verify Gst</button><br><br>

        <span id="pan-verification-result"></span><br>
        <span id="gst-verification-result"></span><br><br>

        <button type="submit">Sign Up</button>
    </form>
</body>